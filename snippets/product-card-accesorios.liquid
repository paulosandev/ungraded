{% assign product = product_card_product %}

<div class="product-card accesorios-card">
  <div class="product-card__image-section">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 400 }}"
        alt="{{ product.featured_image.alt | default: product.title }}"
        class="product-card__image"
        loading="lazy"
        width="400"
        height="200"
      >
    {% else %}
      <div class="product-card__placeholder">
        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21,15 16,10 5,21"/>
        </svg>
      </div>
    {% endif %}
  </div>

  <div class="product-card__info-section">
    <h3 class="product-title">{{ product.title }}</h3>
    <div class="product-price">{{ product.price | money }} MXN</div>
    <a href="{{ product.url }}" class="ver-mas-btn">Ver m√°s</a>
  </div>
</div>

<style>
  .accesorios-card {
    background: transparent;
    border: 4px solid #000;
    border-radius: 20px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    width: 152px;
    height: 258px;
    margin: 0 auto;
    flex-shrink: 0;
  }
  .accesorios-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  .product-card__image-section {
    background: linear-gradient(135deg, #ff9500 0%, #ff7b00 100%);
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .accesorios-card:hover .product-card__image {
    transform: scale(1.05);
  }
  .product-card__info-section {
    background: #ffeeb8;
    padding: 10px;
    color: #000;
    position: relative;
    height: 158px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .product-title {
    font-size: 0.9rem;
    font-weight: 700;
    margin: 0;
    color: #000;
    line-height: 1.1;
    font-family: 'Acumin Variable Concept', var(--font-family-web), sans-serif;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .product-price {
    font-size: 1rem;
    font-weight: 700;
    color: #000;
    margin: 2px 0;
    font-family: 'Acumin Variable Concept', var(--font-family-web), sans-serif;
  }
  .ver-mas-btn {
    display: inline-block;
    background: transparent;
    color: #000;
    padding: 0;
    font-size: 0.85rem;
    font-weight: 700;
    text-decoration: underline;
    align-self: flex-start;
  }
</style>
